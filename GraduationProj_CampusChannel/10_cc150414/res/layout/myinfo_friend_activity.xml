<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/frTitle"
        android:src="@drawable/frtitle2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:scaleType="center"
        android:background="#FFFFBB33" />

    <ImageView
        android:id="@+id/frImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/frTitle"
        android:layout_marginLeft="10dp"   
        android:layout_marginTop="10dp" 
        android:scaleType="fitXY" />
    
    <TextView
        android:id="@+id/frName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" 
        android:text="친구이름"
        android:lines="1"
        android:textSize="25sp" />
    
    <TextView
        android:id="@+id/frUniv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frName"
        android:layout_marginLeft="10dp"
        android:text="친구학교"
        android:textSize="25sp" />
    
    <TextView
        android:id="@+id/frRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frUniv"
        android:layout_marginLeft="10dp"
        android:text="친구랭크값"
        android:textSize="25sp" />
    
    <Button
        android:id="@+id/frEval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/frRank"
        android:drawableLeft="@drawable/star"
        android:layout_marginTop="10dp" 
        android:text=" 평가한 업소 : "
        android:textColor="#FFFFD700" />

    <Button
        android:id="@+id/frRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frEval"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/like"
        android:layout_marginTop="0dp"
        android:text=" 추천한 업소 : "
        android:textColor="#3366FF" />
</RelativeLayout>
