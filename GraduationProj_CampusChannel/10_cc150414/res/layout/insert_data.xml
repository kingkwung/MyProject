<!-- ?xml version="1.0" encoding="utf-8"? -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/selectUniv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="대학교를 선택하세요." />

    <Spinner
        android:id="@+id/mySpinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="True"
        android:prompt="@string/univ" />

    <TextView
        android:id="@+id/selectStoreType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="업소 종류를 선택하세요." />

    <Spinner
        android:id="@+id/mySpinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="True"
        android:prompt="@string/type" />

    <TextView
        android:id="@+id/insertStorename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="업소 이름을 입력하세요." />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="업소이름"
        android:textAppearance="?android:attr/textAppearanceSmall"  />

    <TextView
        android:id="@+id/insertStoreTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="관련 태그를 입력하세요." />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="관련태그"
        android:textAppearance="?android:attr/textAppearanceSmall"  />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/upload_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 등록" >
        </Button>      

        <Button
            android:id="@+id/insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="입력하기" />

         <Button
             android:id="@+id/back"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/insert"
             android:layout_marginTop="4dp"
             android:text="뒤로가기" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>